        <div class="boxes">
          <div class="box box1">
            <img
              src="https://icons.veryicon.com/png/o/food--drinks/flat-color-restaurant-icon/hamburger-8.png"
              class="category-burger-icon"
            />
            <span class="text">Burger</span>
          </div>

          <div class="box box2">
            <img
              src="https://cdn-icons-png.flaticon.com/512/4329/4329542.png"
              class="category-drink-icon"
            />
            <span class="text">Drinks</span>
          </div>
        </div>
      </div>

      <h3 class="order-text">Choose Order</h3>
      <div class="food-boxes">
        <div class="choose-order row">
          <div class="col-3">
            <div class="food food1">
              <img class="burger-img1" src="images/burger1.png">
